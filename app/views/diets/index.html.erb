<p id="notice"><%= notice %></p>

<h1>Diets</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Initial Weight (kg)</th>
      <th>Target Weight (kg)</th>
      <th>Height (cm)</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @diets.each do |diet| %>
      <tr>
        <td><%= diet.start_date.strftime("%m/%d/%Y") %></td>
        <td><%= diet.end_date.strftime("%m/%d/%Y") %></td>
        <td><%= diet.initial_weight %></td>
        <td><%= diet.target_weight %></td>
        <td><%= diet.height %></td>
        <td><%= link_to '✏️', edit_diet_path(diet) %></td>
        <td><%= link_to '🗑️', diet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button class="btn btn-primary">
  <%= link_to 'New Diet', new_diet_path %>
</button>

